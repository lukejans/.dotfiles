//  ______
// | z.rs |  lukejans zed
// |______|  settings.json
//
// for information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// to see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    // --- ui
    "cursor_shape": "block",
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "One Dark"
    },
    "tabs": {
        "file_icons": true,
        "git_status": true,
        "show_diagnostics": "all"
    },

    // --- editor
    "tab_size": 4,
    "buffer_font_family": "Zed Plex Mono",
    "buffer_font_fallbacks": ["Zed Mono", "JetBrainsMono Nerd Font"],
    "extend_comment_on_newline": false,
    "minimap": {
        "show": "always"
    },

    // --- terminal
    "terminal": {
        "line_height": "standard",
        "copy_on_select": true,
        "option_as_meta": true,
        "font_features": {
            "calt": false
        }
    },

    // --- file associations
    "file_types": {
        "Shell Script": [".env.*", "**/.zprofile", "**/completions/_*"],
        "Git Config": ["**/git/config*"],
        "Git Ignore": ["**/git/gitignore*"]
    },

    // --- ai
    "agent": {
        "always_allow_tool_actions": true,
        "default_model": {
            "provider": "copilot_chat",
            "model": "claude-sonnet-4"
        },
        "version": "2"
    },
    "features": {
        "edit_prediction_provider": "zed"
    },
    "edit_predictions": {
        "disabled_globs": ["**/.ssh/**"],
        "mode": "subtle",
        "enabled_in_text_threads": false
    },

    // --- privacy
    "private_files": ["**/.env*", "**/.ssh/**"],

    // --- journal
    "journal": {
        "path": "~/Notes",
        "hour_format": "hour24"
    },

    // --- git
    "git_panel": {
        "status_style": "label_color"
    },

    // --- language specific settings
    "languages": {
        "Shell Script": {
            "formatter": {
                "external": {
                    "command": "shfmt",
                    "arguments": [
                        "--filename",
                        "{buffer_path}",
                        "--indent",
                        "4"
                    ]
                }
            }
        },
        "JavaScript": {
            "code_actions_on_format": {
                "source.fixAll.eslint": true,
                "source.organizeImports": true
            }
        },
        "TypeScript": {
            "code_actions_on_format": {
                "source.fixAll.eslint": true,
                "source.organizeImports": true
            }
        },
        "TSX": {
            "code_actions_on_format": {
                "source.fixAll.eslint": true,
                "source.organizeImports": true
            }
        },
        "Ruby": {
            "language_servers": ["solargraph", "rubocop", "!ruby-lsp"]
        },
        "HTML": {
            "formatter": {
                "language_server": {
                    "name": "superhtml"
                }
            }
        },
        "CSS": {
            "formatter": "prettier",
            "code_actions_on_format": {
                "source.fixAll.stylelint": true
            }
        },
        "Markdown": {
            "format_on_save": "on"
        },
        "Java": {
            "formatter": "language_server"
        }
    },

    // --- language server settings
    "lsp": {
        // ruby related langauge servers
        "solargraph": {
            "initialization_options": {
                "diagnostics": true,
                "formatting": true
            }
        },

        // css related language servers
        "stylelint-lsp": {
            "settings": {
                "stylelint": {
                    "packageManager": "pnpm"
                }
            }
        },

        // java related language servers
        "jdtls": {
            "initialization_options": {
                "settings": {
                    "java": {
                        "errors": {
                            "incompleteClasspath": {
                                "severity": "warning"
                            }
                        },
                        "trace": {
                            "server": "verbose"
                        },
                        "jdt": {
                            "ls": {
                                "lombokSupport": {
                                    "enabled": true
                                }
                            }
                        },
                        "format": {
                            "enabled": true
                        },
                        "saveActions": {
                            "organizeImports": true
                        }
                    }
                }
            }
        }
    },
    // --- privacy
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    }
}
